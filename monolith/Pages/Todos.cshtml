@page
@model Optivem.AtddAccelerator.Template.Monolith.Pages.TodosModel
@{
    ViewData["Title"] = "Todos";
}

<div class="text-center">
    <h1 class="display-4">Todo Fetcher</h1>
    <p>Enter a todo ID to fetch todo information.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label for="todoId" class="form-label">Todo ID:</label>
                        <input type="number" 
                               class="form-control" 
                               id="todoId" 
                               name="TodoId" 
                               asp-for="TodoId" 
                               placeholder="Enter todo ID (e.g., 4)" 
                               min="1" 
                               max="200" />
                    </div>
                    <button type="submit" class="btn btn-primary" id="fetchTodo">Fetch Todo</button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.TodoResult != null)
{
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Todo Result</h5>
                </div>
                <div class="card-body">
                    <div id="todoResult">
                        <strong>User ID:</strong> @Model.TodoResult.UserId<br/>
                        <strong>ID:</strong> @Model.TodoResult.Id<br/>
                        <strong>Title:</strong> @Model.TodoResult.Title<br/>
                        <strong>Completed:</strong> @Model.TodoResult.Completed
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else if (Model.HasError)
{
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="alert alert-danger">
                <div id="todoResult">Error fetching todo: @Model.ErrorMessage</div>
            </div>
        </div>
    </div>
}